<p id="notice"><%= notice %></p>

<h1>Listing Pt Records</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>String</th>
      <th>Email</th>
      <th>Birthdate</th>
      <th>Infection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pt_records.each do |pt_record| %>
      <tr>
        <td><%= pt_record.firstname %></td>
        <td><%= pt_record.lastname %></td>
        <td><%= pt_record.string %></td>
        <td><%= pt_record.email %></td>
        <td><%= pt_record.birthdate %></td>
        <td><%= pt_record.infection %></td>
        <td><%= link_to 'Show', pt_record %></td>
        <td><%= link_to 'Edit', edit_pt_record_path(pt_record) %></td>
        <td><%= link_to 'Destroy', pt_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

